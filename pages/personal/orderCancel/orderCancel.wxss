.order_cancelcontainer {
    min-height: 100vh;
    background: #F7F5F4;
}

.order_cancelcontainer .order_status_wrap {
    padding: 32rpx 36rpx;
    position: relative;
}

.order_cancelcontainer .order_status_wrap .order_status {
    color: #584F4F;
    font-size: 36rpx;
    font-weight: bold;
}

.order_cancelcontainer .order_status_wrap .order_tip {
    color: #ACA3A3;
    font-size: 22rpx;
    margin-top: 3rpx;
}

.order_cancelcontainer .cancel_reason_wrap {
    background: #fff;
    padding-left: 30rpx;
}

.order_cancelcontainer .cancel_reason_wrap .reason_wrap {
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    height: 88rpx;
    border-bottom: 1px solid #E4E0DE;
}

.order_cancelcontainer .cancel_reason_wrap .reason_wrap .select_wrap {
    -ms-flex-negative: 0;
    flex-shrink: 0;
    width: 40rpx;
}

.order_cancelcontainer .cancel_reason_wrap .reason_wrap .select_wrap .select {
    width: 32rpx;
    height: 32rpx;
    border: 1rpx solid #7f7676;
    border-radius: 32rpx;
    font-size: 0;
}

.order_cancelcontainer .cancel_reason_wrap .reason_wrap .select_wrap .select image {
    width: 34rpx;
    height: 34rpx;
}

.order_cancelcontainer .cancel_reason_wrap .reason_wrap .select_wrap .select.noborder {
    border: none;
}

.order_cancelcontainer .cancel_reason_wrap .reason_wrap .content {
    margin-left: 20rpx;
    color: #584F4F;
    font-size: 30rpx;
}

.order_cancelcontainer .cancel_reason_wrap .reason_wrap:last-child {
    border: none;
}

.order_cancelcontainer .cancel_reason_wrap .textarea_wrap {
    padding: 20rpx 30rpx 20rpx 0;
    box-sizing: border-box;
}

.order_cancelcontainer .cancel_reason_wrap textarea {
    width: 100%;
    height: 150rpx;
    padding: 20rpx;
    box-sizing: border-box;
    border: 1rpx solid #c7c0bc;
    border-radius: 10rpx;
}

.order_cancelcontainer .btn_list_wrap {
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: justify;
    -ms-flex-pack: justify;
    justify-content: space-between;
    padding: 50rpx 30rpx 0;
    box-sizing: border-box;
    line-height: 88rpx;
    text-align: center;
}

.order_cancelcontainer .btn_list_wrap .confirm {
    width: 170rpx;
    height: 86rpx;
    border-radius: 8rpx;
    border: 1rpx solid #c7c0bc;
    color: #C7C0BC;
    font-size: 32rpx;
}

.order_cancelcontainer .btn_list_wrap .contact_service {
    width: 500rpx;
    height: 88rpx;
    background: -webkit-gradient(linear,left top,right top,from(#ff6186),color-stop(34%,#ff783a),to(#ff5000));
    background: linear-gradient(90deg,#ff6186 0%,#ff783a 34%,#ff5000 100%);
    border-radius: 8rpx;
    color: #fff;
    font-size: 32rpx;
}