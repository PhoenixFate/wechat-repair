.order_comment_container {
    min-height: 100vh;
    background: #F7F5F4;
    padding-top: 20rpx;
}

.order_comment_container .device_wrap {
    padding: 16rpx 44rpx;
    background: #fff;
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
}

.order_comment_container .device_wrap image {
    width: 106rpx;
    height: 106rpx;
    margin-right: 30rpx;
}

.order_comment_container .device_wrap .phone_info .phone_name {
    color: #584F4F;
    font-size: 28rpx;
    font-weight: bold;
}

.order_comment_container .device_wrap .phone_info .repair_type {
    color: #584F4F;
    font-size: 24rpx;
}

.order_comment_container .service_comment_wrap {
    margin-top: 20rpx;
    padding: 0 20rpx;
}

.order_comment_container .service_comment_wrap .service_comment {
    background: white;
    box-shadow: 0px 0px 26rpx 0px rgba(0,0,0,0.1);
    border-radius: 8rpx;
    padding: 13rpx 20rpx 37rpx;
    color: #584F4F;
    font-size: 28rpx;
}

.order_comment_container .service_comment_wrap .service_comment .service_level {
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    padding: 57rpx 0 20rpx;
}

.order_comment_container .service_comment_wrap .service_comment .service_level .level_wrap {
    padding: 0 30rpx;
}

.order_comment_container .service_comment_wrap .service_comment .service_level .level_wrap image {
    width: 60rpx;
    height: 60rpx;
}

.order_comment_container .service_comment_wrap .service_comment .service_tip {
    text-align: center;
    font-size: 24rpx;
}

.order_comment_container .comment_img_wrap {
    margin-top: 20rpx;
    padding: 0 20rpx;
}

.order_comment_container .comment_img_wrap .comment_wrap {
    background: white;
    box-shadow: 0px 0px 26rpx 0px rgba(0,0,0,0.1);
    border-radius: 8rpx;
}

.order_comment_container .comment_img_wrap .comment_wrap .textarea {
    width: 100%;
    box-sizing: border-box;
    padding: 20rpx 19rpx;
    font-size: 28rpx;
    height: 250rpx;
    word-break: break-all;
}

.order_comment_container .comment_img_wrap .comment_wrap .textarea_placeholder {
    color: #C7C0BC;
}

.order_comment_container .comment_img_wrap .comment_wrap .preview_image {
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    flex-wrap: wrap;
    padding: 20rpx;
}

.order_comment_container .comment_img_wrap .comment_wrap .preview_image .image_wrap {
    position: relative;
    margin-bottom: 20rpx;
    width: 128rpx;
    height: 128rpx;
    -webkit-column-break-inside: avoid;
    break-inside: avoid;
}

.order_comment_container .comment_img_wrap .comment_wrap .preview_image .image_wrap image {
    width: 128rpx;
    height: 128rpx;
    width: 100%;
}

.order_comment_container .comment_img_wrap .comment_wrap .preview_image .image_wrap .progress {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
}

.order_comment_container .comment_img_wrap .comment_wrap .preview_image .image_wrap.mr {
    margin-right: 52rpx;
}

.order_comment_container .comment_img_wrap .comment_wrap .img_update_wrap {
    padding: 0 20rpx 20rpx 20rpx;
}

.order_comment_container .comment_img_wrap .comment_wrap .img_update_wrap .img_update {
    width: 128rpx;
    height: 128rpx;
    box-sizing: border-box;
    padding: 15rpx 0 10rpx;
    background: white;
    border-radius: 8rpx;
    border: 1rpx dashed #aca3a3;
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-flow: column;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
}

.order_comment_container .comment_img_wrap .comment_wrap .img_update_wrap .img_update image {
    -ms-flex-negative: 0;
    flex-shrink: 0;
    width: 44rpx;
    height: 35rpx;
}

.order_comment_container .comment_img_wrap .comment_wrap .img_update_wrap .img_update .img_tip {
    margin-top: 5rpx;
    color: #ACA3A3;
    font-size: 24rpx;
}

.order_comment_container .comment_img_wrap .comment_wrap .img_update_wrap .img_update .img_count {
    color: #ACA3A3;
    font-size: 24rpx;
}

.order_comment_container .confirm_comment_btn {
    padding: 30rpx 30rpx 0;
}

.order_comment_container .confirm_comment_btn .btn {
    background: -webkit-gradient(linear,left top,right top,from(#ff6186),color-stop(34%,#ff783a),to(#ff5000));
    background: linear-gradient(90deg,#ff6186 0%,#ff783a 34%,#ff5000 100%);
    border-radius: 8rpx;
    color: rgba(255,255,255,0.9);
    text-align: center;
    line-height: 88rpx;
    font-size: 32rpx;
}