.postdevice_container {
    min-height: 100vh;
    background: #F7F5F4;
    padding-top: 20rpx;
}

.postdevice_container .device_wrap {
    padding: 16rpx 44rpx;
    background: #fff;
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
}

.postdevice_container .device_wrap image {
    width: 106rpx;
    height: 106rpx;
    margin-right: 30rpx;
}

.postdevice_container .device_wrap .phone_info .phone_name {
    color: #584F4F;
    font-size: 28rpx;
    font-weight: bold;
    display: flex;
}

.postdevice_container .device_wrap .phone_info .repair_type {
    color: #584F4F;
    font-size: 24rpx;
}

.postdevice_container .express_info_wrap {
    padding: 20rpx;
}

.postdevice_container .express_info_wrap input {
    padding: 26rpx 13rpx;
    font-size: 28rpx;
    color: #584F4F;
}

.postdevice_container .express_info_wrap .express_num_placeholder {
    color: #C7C0BC;
}

.postdevice_container .express_info_wrap .express_num {
    padding: 0 15rpx;
    background: white;
    border-radius: 8rpx;
}

.postdevice_container .express_info_wrap .express_company {
    margin-top: 20rpx;
    padding: 0 15rpx;
    background: white;
    border-radius: 8rpx;
}

.postdevice_container .express_info_wrap .express_company .company_select {
    padding: 26rpx 13rpx;
    background: white;
    border-radius: 8rpx;
    font-size: 28rpx;
    color: #C7C0BC;
}

.postdevice_container .express_info_wrap .express_company .company_select.active {
    color: #584F4F;
}

.postdevice_container .express_info_wrap .express_tel {
    margin-top: 20rpx;
    padding: 0 15rpx;
    background: white;
    border-radius: 8rpx;
}

.postdevice_container .express_info_wrap .express_tel input {
    border-bottom: 1px solid #E4E0DE;
}

.postdevice_container .express_info_wrap .express_tel .input_wrap {
    position: relative;
}

.postdevice_container .express_info_wrap .express_tel .input_wrap .click_edit {
    position: absolute;
    top: 29rpx;
    right: 288rpx;
    color: #C7C0BC;
    font-size: 28rpx;
}

.postdevice_container .express_info_wrap .express_tel textarea {
    padding: 26rpx 13rpx;
    font-size: 28rpx;
    color: #584F4F;
}

.postdevice_container .confirm_express_btn {
    padding: 30rpx 30rpx 0;
}

.postdevice_container .confirm_express_btn .btn {
    background: -webkit-gradient(linear,left top,right top,from(#ff6186),color-stop(34%,#ff783a),to(#ff5000));
    background: linear-gradient(90deg,#ff6186 0%,#ff783a 34%,#ff5000 100%);
    border-radius: 8rpx;
    color: rgba(255,255,255,0.9);
    text-align: center;
    line-height: 88rpx;
    font-size: 32rpx;
}