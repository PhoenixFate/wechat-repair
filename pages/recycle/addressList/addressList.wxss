.add_addr_button {
    position: fixed;
    bottom: 30rpx;
    width: 686rpx;
    border-radius: 10rpx;
    height: 100rpx;
    left: 50%;
    margin-left: -343rpx;
    background: url(data:image/png;base64,) 200rpx center no-repeat #fff;
    background-size: 26rpx 26rpx;
    box-shadow: 0px 3px 24px 0px rgba(163,163,163,0.2);
    text-align: center;
    line-height: 100rpx;
    font-size: 28rpx;
    color: #FF7A00;
}

.no_address {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.no_address image {
    width: 196rpx;
    height: 160rpx;
    margin: 82rpx auto 0;
}

.no_address_txt {
    text-align: center;
    color: #ababab;
    font-size: 32rpx;
    margin-top: 86rpx;
}

.addr_list_view {
    width: 686rpx;
    margin: 0 auto;
    padding-bottom: 150rpx;
}

.item {
    font-size: 28rpx;
    display: flex;
    justify-content: space-between;
    min-height: 190rpx;
    width: 100%;
    overflow: hidden;
    box-shadow: 0px 3px 24px 0px rgba(163,163,163,0.2);
    border-radius: 10rpx;
    margin: 16rpx 0;
}

.content {
    width: 100%;
    line-height: 22px;
    margin-right: 0;
    transition: all 0.4s;
    transform: translateX(150rpx);
    margin-left: -150rpx;
    padding: 42rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.content .content_info {
    width: 500rpx;
    max-width: 530rpx;
}

.content .content_info .name_phone {
    display: flex;
}

.content .content_info .name_phone .content_name {
    font-size: 30rpx;
    font-weight: 600;
    color: #000;
}

.content .content_info .name_phone .content_phone {
    font-size: 24rpx;
    color: #ababab;
    margin-left: 20rpx;
}

.content .content_address {
    margin-top: 16rpx;
}

.content .content_address .content_address_txt {
    color: #ababab;
    font-size: 26rpx;
    line-height: 38rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
}

.content .content_address .content_address_txt .address_default {
    width: 60rpx;
    height: 30rpx;
    background: #fcc;
    border-radius: 2rpx;
    font-size: 24rpx;
    line-height: 30rpx;
    color: #FF7A00;
    text-align: center;
    display: inline-block;
}

.content .edit image {
    height: 52rpx;
    width: 52rpx;
}

.del {
    background-color: #FD493B;
    width: 150rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: #fff;
    transform: translateX(150rpx);
    transition: all 0.4s;
    border-radius: 0 10rpx 10rpx 0;
}

.touch-move .content,.touch-move .del {
    transform: translateX(0);
}