.header {
    width: 100%;
    text-align: center;
    position: relative;
}

.header image {
    width: 100%;
    background-size: contain;
    height: 510rpx;
}

.r_box1 {
    padding: 0 20rpx;
}

.r_box2 {
    padding: 40rpx 20rpx;
}

.r_box1 image {
    width: 100%;
    height: 150rpx;
}

.r_box2 image {
    width: 100%;
    height: 540rpx;
}

.r_box3 {
    padding: 0 20rpx 40rpx;
    font-size: 24rpx;
    line-height: 36rpx;
}

.ncsjtitle {
    width: 113rpx;
    height: 38rpx;
}

.ncsjq {
    position: relative;
    padding: 20rpx 0 0 36rpx;
    color: #333;
}

.ncsjq text {
    display: block;
    position: absolute;
    left: 0;
    top: 20rpx;
}

.ncsja {
    position: relative;
    padding: 0 0 20rpx 36rpx;
    color: #999;
    border-bottom: 1rpx solid #e6e6e6;
}

.ncsja text {
    display: block;
    position: absolute;
    left: 0;
    top: 0rpx;
}

.r_box3 .s-c {
    color: #FF7A00;
}

.r_box4 {
    padding: 0 20rpx 40rpx;
}

.r_box4 text {
    display: block;
    padding: 14rpx 0 24rpx;
    font-size: 24rpx;
    line-height: 36rpx;
    color: #999;
}

.ncsjfooter {
    position: fixed;
    width: 750rpx;
    height: 101rpx;
    bottom: 0;
    left: 0;
    z-index: 9;
}

.ncsjfooter image {
    width: 750rpx;
    height: 101rpx;
}